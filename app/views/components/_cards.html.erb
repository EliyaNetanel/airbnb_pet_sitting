<div class="container">
  <div class="row">
    <% @sittings.each do |sitting| %>
      <div class="col-xs-12 col-sm-4"><%= link_to sitting_path(sitting) do  %>
        <div class="card" >
          <div class="owner" >
            <%= image_tag "avatar_pic.jpg", alt: "owner_avatar_picture", class: "avatar_image" %>
            <div class="owner-name text-center">
              <%= sitting.owner.name.capitalize %>
            </div>
            <div class="owner-address text-center" >
              <i class="fas fa-map-marker-alt"></i>
            <br>
              <%= sitting.owner.address.split(",").first.capitalize %><br>
              <strong><%= sitting.owner.address.split(",").last.capitalize %></strong>
            </div>
          </div> <!-- end of owner. Left part of the card -->
          <div class="pet text-center">
            <ul class="list-unstyled"><!--Pet infor. right part of the card -->
              <% sitting.owner.pets.each do |pet| %>
                <li>
                  <div class="pet-name text-center">
                    <%= pet.name.capitalize %>
                  </div><!--pet-name-->
                  <div class="pet-image">
                    <%# image_tag pet.photo, :alt => "pet_photo" %>
                  </div><!-- pet-image-->
                </li>
              <% end %> <!-- end pet detail loop -->
            </ul>
            <div class="plus-pets">
              <!-- HERE WE PLACE FONT AWESOME PLUS -->
            </div><!-- plus-pets-->
          </div><!-- pet-->
          <div class="sitting-period text-center">
            <!-- <div class="sitting-title text-center"> -->
            <!-- </div>sitting-title -->
            <!-- <div class="sitting-dates text-center"> -->
              <i class="far fa-calendar-alt calender-icon"></i>
              <%= "#{sitting.start_date} - #{sitting.end_date}" %>
            </div><!--sitting-dates-->
          <!-- </div>sitting-period -->
        </div> <!-- end div card -->
        <% end %>
      </div><!--bootstrap grid-->
    <% end %><!--end sitting loop-->
  </div><!--row-->
</div> <!-- container-->

