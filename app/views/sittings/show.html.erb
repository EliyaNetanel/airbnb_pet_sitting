
<div id="carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel" data-slide-to="0" class="active"></li>
    <li data-target="#carousel" data-slide-to="1"></li>
    <!-- <li data-target="#carousel" data-slide-to="2"></li> -->
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "dog1.jpg" %>
      <!-- <img src="/assets/dog1.jpg"> -->
    </div>
    <div class="item">
      <%= image_tag "cat1.jpg" %>
      <!-- <img src="/assets/cat1.jpg"> -->
    </div>

    <div class="item">
      <%= image_tag "rat1.jpg" %>
      <!-- <img src="/assets/rat1.jpg"> -->
    </div>

    <!-- <div class="item"> -->
      <!-- <img src="/assets/rat1.jpg"> -->
    <!-- </div> -->
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="header", style="margin-top: 60px">
  <div class="show-name text-center">
    <h1>Sitting info</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto text-center">
      <h2 class="section-heading text-white">Owner</h2>
      <div>
        <img src="/assets/cross_eyed_woman.jpg" class="avatar-large"/>

      </div>
          <ul>
            <li>name: <%= @owner.name %></li>
            <li>user name: <%= @owner.user_name %></li>
            <li>address: <%= @owner.address %></li>
            <li>phone number: <%= @owner.phone_number %></li>
            <li>email: <%= @owner.email %></li>
            <li>description: <%= @owner.description %></li>
          </ul>
    </div>
  </div>
</div>
  <div class="container">
  <div class="row">
    <div class="col-lg-8 mx-auto text-center">
          <h4><strong>Pets</strong></h4>
    <% @pets.each do |pet| %>

          <ul>
          <br>
          <li><em>name: <%= pet.name %></em></li>
          <li>species: <%= pet.species %></li>
          <li>info: <%= pet.info %></li>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
  <div class="sitting-description text-center">
    <div class="specific-sitting-description">
      <% if @sitting.description != nil %>
        <h4>Sitting description</h4>
        <%= @sitting.description %>
      <% end %>
    </div>
    <div class="sitting-date">
      <br>
      <br>
      <h4><strong>Date:</strong></h4>
      <%= @sitting.start_date %> - <%= @sitting.end_date %>
    </div>
  </div>
  <div class="apply-to-sitting">
    <% if @sitting.sitter.nil? %>
    <%= link_to "Apply for sitting", sitting_path(@sitting), method: :patch , class: "btn btn-primary" %>
    <% else %>
      <div class="btn btn-success">
        Applied successfully
      </div>
    <% end %>
      <!-- Apply for sitting -->
  </div>
</div>
